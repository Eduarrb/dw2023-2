<section class="auth">
    <div class="auth__data">
        <img src="/img/logo-kompi-dark.png" alt="" class="auth__data__logo mb-10">
        <h1 class="titulo-n2 text-center mb-5">Costumer Register</h1>
        <p class="descri text-center">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla eget ultricies nibh mattis tortor egestas dis at ipsum.</p>
        <form action="/auth/register" class="auth__data__form mt-4" method="post">
            <div class="form-group mb-2">
                <input 
                    type="text" 
                    placeholder="Name" 
                    name="nombre" 
                    value=<%- usuario ? usuario.nombre : '' %>
                >
                <div class="auth__data__form--error">
                    <%- errores ? errores.nombre : '' %>
                </div>
            </div>
            <div class="form-group mb-2">
                <input 
                    type="email" 
                    placeholder="Email" 
                    name="email" 
                    value=<%- usuario ? usuario.email : '' %>
                >
                <div class="auth__data__form--error">
                    <%- errores ? errores.email : '' %>
                </div>
            </div>
            <div class="form-group mb-2">
                <input type="password" placeholder="Password" name="password">
                <div class="auth__data__form--error">
                    <%- errores ? errores.password : '' %>
                </div>
            </div>
            <div class="form-group mb-5">
                <input type="password" placeholder="Confirm Password" name="repetirPassword">
                <div class="auth__data__form--error">
                    <%- errores ? errores.repetirPassword : '' %>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Registrate" class="btnFullWidth color-blanco">
            </div>
        </form>
    </div>
    <div class="auth__loginImgBox"></div>
</section>