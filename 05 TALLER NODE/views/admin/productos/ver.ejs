<section class="admin">
    <%- include('../menu.ejs') %>
    <div class="admin__data">
        <h1 class="titulo-n2 text-center mb-5">Formulario Productos</h1>
        <p class="mensaje"></p>
        <form class="admin__data__form mt-4" method="post">
            <input type="hidden" name="_csrf" value=<%- csrfToken %>>
