<section class="admin">
    <%- include('../menu.ejs') %>
    <div class="admin__data">
        <h1 class="titulo-n2 text-center mb-5">Formulario Categorias</h1>
        <p class="mensaje"></p>
        <form class="admin__data__form mt-4" method="post">
            <input type="hidden" name="_csrf" value=<%- csrfToken %>>
            
            <div class="form-group mb-2">
                <input type="text" placeholder="Nombre de la categoria" name="nombre">
                <div class="admin__data__form--error">
                    <%- errores ? errores.nombre : '' %>
                </div>
            </div>
            <div class="form-group mt-5">
                <input type="submit" value="Guardar" class="btnFullWidth color-blanco">
            </div>
        </form>
    </div>
</section>